issn = {0048-9697},
journal = {Science of The Total Environment},
month = {apr},
pages = {110--120},
publisher = {Elsevier},
title = {{Preferential meltwater flowpaths as a driver of preferential elution of chemicals from melting snowpacks}},
url = {https://www.sciencedirect.com/science/article/pii/S0048969719301020},
volume = {662},
