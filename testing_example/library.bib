journal = {Journal of Hydrology},
pages = {203--214},
title = {{Spatial and temporal dynamics of water flow and solute transport in a heterogeneous glacial till: The application of high-resolution profiles of $\delta$18O and $\delta$2H in pore waters}},
volume = {438},
year = {2012}
}
