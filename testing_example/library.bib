number = {5},
pages = {1647},
publisher = {American Society of Agronomy, Crop Science Society of America, Soil Science Society},
title = {{Phosphorus forms and chemistry in the soil profile under long-term conservation tillage: a phosphorus-31 nuclear magnetic resonance study}},
