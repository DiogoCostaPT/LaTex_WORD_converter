journal = {Hydrological Processes},
keywords = {Fluxes,Forest,Frost,Organic,Riparian,Runoff,Soil,Sweden,Water},
number = {6},
pages = {909--926},
title = {{Soil frost effects on soil water and runoff dynamics along a boreal forest transect: 1. Field investigations}},
volume = {15},
