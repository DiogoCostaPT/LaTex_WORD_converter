publisher = {The American Society of Agronomy, Crop Science Society of America, and Soil Science Society of America, Inc.},
title = {{Long-term impact of tillage practices and phosphorus fertilization on soil phosphorus forms as determined by P nuclear magnetic resonance spectroscopy}},
