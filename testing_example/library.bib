journal = {Plant Ecology {\&} Diversity},
keywords = {green lakes valley,hydrochemistry,hydrological modelling,hydrology,niwot ridge,snow},
number = {5-6},
pages = {639--661},
title = {{The ‘teflon basin' myth: hydrology and hydrochemistry of a seasonally snow-covered catchment}},
url = {http://www.tandfonline.com/doi/full/10.1080/17550874.2015.1123318},
volume = {8},
