@article{Hales2007,
abstract = {We used the dual isotope method to study differences in nitrate export in two subwater-sheds in Vermont, USA. Precipitation, soil water and streamwater samples were collected from two watersheds in Camels Hump State Forest, located within the Green Mountains of Vermont. These samples were analyzed for the delta N-15 and delta O-18 of NO3-. The range of delta N-15-NO3- values overlapped, with precipitation -4.5 parts per thousand to +2.0 parts per thousand (n = 14), soil solution -10.3 parts per thousand to +6.2 parts per thousand. (n = 12) and streamwater +0.3 parts per thousand to +3.1 parts per thousand. (n = 69). The 6180 of precipitation NO3- (mean 46.8 +/- 11.57 parts per thousand) was significantly different (P {\textless} 0.001) from that of the stream (mean 13.2 +/- 4.37 parts per thousand) and soil waters (mean 14.5 +/- 4.27 parts per thousand) even during snowmelt periods. Extracted soil solution and strearnwater delta O-18 of NO3- were similar and within the established range of microbially produced NO3-, demonstrating that NO3- was formed by microbial processes. The delta N-15 and delta O-18 of NO3- suggests that although the two tributaries have different seasonal NO3- concentrations, they have a similar NO3- source.},
author = {Hales, Heidi C. and Ross, Donald S. and Lini, Andrea},
doi = {10.1007/s10533-007-9074-6},
