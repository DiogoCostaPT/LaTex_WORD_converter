file = {:home/diogo/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Mekonnen, Mazurek, Putz - 2017 - Modeling of nutrient export and effects of management practices in a cold-climate prairie watershed Ass.pdf:pdf},
issn = {03783774},
