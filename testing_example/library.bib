file = {:home/diogo/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zhang, Chen, Yao - 2016 - SWAT-CSenm Enhancing SWAT nitrate module for a Canadian Shield catchment.pdf:pdf},
issn = {18791026},
