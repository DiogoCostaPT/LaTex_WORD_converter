keywords = {Canadian Shield,Enhanced nitrate module,GLUE,Nitrate deposition,Uncertainty analysis},
pages = {598--610},
pmid = {26849324},
publisher = {Elsevier B.V.},
title = {{SWAT-CSenm: Enhancing SWAT nitrate module for a Canadian Shield catchment}},
