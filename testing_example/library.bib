file = {:home/diogo/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Cey, Rudolph, Passmore - 2009 - Influence of macroporosity on preferential solute and colloid transport in unsaturated field soils.pdf:pdf},
issn = {01697722},
journal = {Journal of Contaminant Hydrology},
number = {1},
pages = {45--57},
title = {{Influence of macroporosity on preferential solute and colloid transport in unsaturated field soils}},
