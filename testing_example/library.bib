journal = {Agriculture, Ecosystems {\&} Environment},
number = {1},
pages = {59--67},
title = {{N2O emissions from boreal grass and grass - clover pasture soils}},
url = {http://www.sciencedirect.com/science/article/pii/S0167880909003752},
