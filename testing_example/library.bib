doi = {10.1029/2006WR005286},
file = {:home/diogo/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Petrone, Buffam, Laudon - 2007 - Hydrologic and biotic control of nitrogen export during snowmelt A combined conservative and reactive t.pdf:pdf},
journal = {Water Resources Research},
month = {jun},
number = {6},
title = {{Hydrologic and biotic control of nitrogen export during snowmelt: A combined conservative and reactive tracer approach}},
url = {http://doi.wiley.com/10.1029/2006WR005286},
volume = {43},
